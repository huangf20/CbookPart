<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >
<ImageView
    android:layout_width="@dimen/img_row_icon_width"
    android:layout_height="@dimen/img_row_icon_height"
    android:src="@mipmap/test"
    android:id="@+id/img_row_icon"
    ></ImageView>

    <TextView
        android:id="@+id/img_row_name"
        android:layout_width="@dimen/img_row_icon_width"
        android:layout_height="40dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:gravity="top|left"
        android:text="弃妃，你又被翻牌了！"
        android:textColor="#1B1A1A"></TextView>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_width="@dimen/img_row_icon_width"
        android:layout_height="wrap_content"
        android:text="66万人在读"
        android:textSize="12sp"
        android:id="@+id/img_row_readcount"
        ></TextView>
</LinearLayout>
